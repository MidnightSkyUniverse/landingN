doctype html
html(lang='en')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='Contact Ali Bińkowska')
        meta(name='author', content='Ali Bińkowska')

        title Contact - Ali Bińkowska

        // Favicon
        link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

        include includes/css.pug

    body.d-flex.flex-column.h-100.bg-white

        main.flex-shrink-0

            // Navigation
            include includes/navbar.pug

            // Page content
            section.py-5

                .container.px-5.my-5

                    .text-center.mb-5
                        h1.display-5.fw-bolder
                            span.text-gradient.d-inline(data-i18n="pageTitle") Get in touch

                    .row.gx-5.justify-content-center
                        .col-lg-8.col-xl-6

                            // Contact Card
                            .card.shadow.border-0.rounded-4.mb-5
                                .card-body.p-5.text-center

                                    // Email Section
                                    .mb-5
                                        h3.fw-bolder.mb-3(data-i18n="emailLabel") Email
                                        p.lead.mb-0(data-i18n="email")  contact @ alibinkowska.co

                                    // Social Media Section
                                    .mb-5
                                        h3.fw-bolder.mb-3(data-i18n="socialLabel") Social Media
                                        .d-flex.justify-content-center.gap-4.fs-2
                                            a.text-gradient(href='https://linkedin.com/in/alibinkowska', target='_blank', title='LinkedIn')
                                                i.bi.bi-linkedin
                                            a.text-gradient(href='https://x.com/AliBinkowska', target='_blank', title='Twitter/X')
                                                i.bi.bi-twitter
                                            a.text-gradient(href='https://medium.com/@alibinkowska', target='_blank', title='Medium')
                                                i.bi.bi-medium

                                    // Company Details Section
                                    .pt-4.border-top
                                        h5.mb-3(data-i18n="companyLabel") Company Details
                                        p.mb-1 Nexi8 Ali Bińkowska


        // Footer
        include includes/footer.pug

        //- Inline translations
        script.
          window.commonTranslations = {
            pl: {
              home: "Strona główna",
              about: "O mnie",
              contact: "Kontakt",
              offer: "Oferta",
              copyright: "© 2025 Nexi8",
              privacyPolicy: "Polityka prywatności"
            }
          };

          window.contactTranslations = {
            pl: {
              pageTitle: "Kontakt",
              emailLabel: "Email",
              email: "kontakt @ alibinkowska.co",
              socialLabel: "Social Media",
              companyLabel: "Dane firmy"
            }
          };

        //- App logic
        script(src='js/app.js')

        include includes/scripts.pug
